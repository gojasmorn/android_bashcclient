<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:background="#ffffff"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/quote_text"
            android:textSize="16sp"
            android:padding="16dp"
            android:text="@string/quote_text_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <SeekBar
        android:max="14"
        android:id="@+id/quote_text_format"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_alignParentRight="true"
        android:layout_below="@+id/quote_text_format"
        android:id="@+id/ripple_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_height="36dp"
            android:text="@string/dialog_ok"
            android:textColor="@color/statusbar_color_day"
            android:gravity="center"
            android:layout_width="wrap_content" />


    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ripple_ok"
        android:layout_below="@+id/quote_text_format"
        android:id="@+id/ripple_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_height="36dp"
            android:text="@string/dialog_cancel"
            android:textColor="@color/statusbar_color_day"
            android:gravity="center"
            android:layout_width="wrap_content" />


    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>